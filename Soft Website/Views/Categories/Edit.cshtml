@model Soft_Website.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.DashboardMsg = "Categories";
}

<style>
    form .form-horizontal .form-group input {
        font-size: .8rem;
        border-radius: 10rem;
        padding: 1.5rem 1rem;
    }
</style>


<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4 col-lg-12">
    <h1 class="h3 mb-0 text-gray-800">Edit</h1>
    <div>
        <a href="@Url.Action("Index","Categories")" class="btn btn-secondary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Back To List</span>
        </a>
    </div>
</div>


<!-- Basic Card Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Edit Details</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                </div>

                <div style="display: block; align-items: center; width: 200px; margin: auto;">
                    <input type="submit" value="Save" class="btn btn-success btn-user btn-block" />
                </div>

            </div>
        }
    </div>
</div>
