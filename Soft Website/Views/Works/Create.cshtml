@model Soft_Website.Models.Work

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.DashboardMsg = "Portfolio";
}

<style>
    form .form-horizontal.row .form-group input {
        font-size: .8rem;
        border-radius: 10rem;
        padding: 1.5rem 1rem;
    }
</style>


<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4 col-lg-12">
    <h1 class="h3 mb-0 text-gray-800">Create New</h1>
    <div>
        <a href="@Url.Action("Create","Works")" class="btn btn-primary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
            </span>
            <span class="text">Create New</span>
        </a>
        <a href="@Url.Action("Index","Works")" class="btn btn-secondary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Back To List</span>
        </a>
    </div>
</div>


<!-- Basic Card Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Enter Details</h6>
    </div>
    <div class="card-body">
        @*@using (Html.BeginForm(new { @class = "user" }))*@
        @using (Html.BeginForm("Create", "Works", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Title" } })
                        @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label id="custom-file-upload">
                            Upload   <i class="fa fa-upload"></i>
                            <input type="file" name="image" id="image" />
                        </label>
                        @*@Html.EditorFor(model => model.image, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Image" } })*@
                        @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.EditorFor(model => model.details, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Details" } })
                        @Html.ValidationMessageFor(model => model.details, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.EditorFor(model => model.features, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Features" } })
                        @Html.ValidationMessageFor(model => model.features, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.EditorFor(model => model.technologies, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Technologies" } })
                        @Html.ValidationMessageFor(model => model.technologies, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.EditorFor(model => model.projectUrl, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Project Url" } })
                        @Html.ValidationMessageFor(model => model.projectUrl, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.DropDownList("CategoryID", null, "-Select Category Type-", new { @class = "form-control" })
                        @*@Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })*@
                        @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                    </div>

                </div>

                <div style="display: block; align-items: center; width: 200px; margin: auto;">
                    <input type="submit" value="Create" class="btn btn-success btn-user btn-block" />
                </div>
            </div>
        }
    </div>
</div>

