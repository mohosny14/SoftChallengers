@model Soft_Website.Models.Team

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.DashboardMsg = "Team";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4 col-lg-12">
    <h1 class="h5 mb-0 text-gray-800">Delete</h1>
    <div>
        <a href="@Url.Action("Index","Teams")" class="btn btn-secondary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Back To List</span>
        </a>
    </div>
</div>

<!-- Basic Card Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary d-inline-block">Delete</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            <h3 class="d-inline-block">Are you sure you want to delete this?</h3>
            @Html.AntiForgeryToken()
            @:&emsp; &emsp; &emsp;
            <div style="display: inline-block;align-items: center;width: 200px;margin: 20px auto;">
                <input type="submit" value="Delete" class="btn btn-danger btn-user" />&emsp;
                <a href="@Url.Action("Index","Teams")" class="btn btn-secondary btn-user">Cancel</a>
            </div>
        }
    </div>
</div>


