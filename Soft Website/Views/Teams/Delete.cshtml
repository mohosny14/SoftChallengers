<!-- Basic Card Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary d-inline-block">Details</h6>
    </div>
    <div class="card-body">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-lg-2">
                    <h5 class="font-weight-bold">@Html.DisplayNameFor(model => model.name)</h5>
                </div>
                <div class="col-lg-10">
                    <h5>@Html.DisplayFor(model => model.name)</h5>
                </div>
                <hr />
            </div>

            <div class="row">
                <div class="col-lg-2">
                    <h5 class="font-weight-bold">@Html.DisplayNameFor(model => model.image)</h5>
                </div>
                <div class="col-lg-10">
                    <div class="preview-img">
                        <img src="~/imgs/teame/@Html.DisplayFor(model => model.image)" />
                    </div>
                    <h5>@Html.DisplayFor(model => model.image)</h5>
                </div>
                <hr />
            </div>

            <div class="row">
                <div class="col-lg-2">
                    <h5 class="font-weight-bold">@Html.DisplayNameFor(model => model.Job_title)</h5>
                </div>
                <div class="col-lg-10">
                    <h5>@Html.DisplayFor(model => model.Job_title)</h5>
                </div>
                <hr />
            </div>
        </div>
    </div>
</div>


