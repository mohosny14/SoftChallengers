@using Soft_Website.Models
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.DashboardMsg = "Dashboard";
}

<link rel="stylesheet" href="~/Css/sb-admin-2.css">
<link rel="stylesheet" href="~/Css/sb-admin-2.min.css">
<link rel="stylesheet" href="~/Css/DashboardVendor/datatables/dataTables.bootstrap4.min.css">

<style>
    img.img-profile.rounded-circle {
        width: 4rem;
        height: 4rem;
    }
</style>


<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
</div>

<!-- Content Row -->
<div class="row">

    <!-- PORTFOLIO -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Team Members  </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.team</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CATEGORIES -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Categoreis Created</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.categories</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-layer-group fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- TEAM -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Portofilo</div>
                        <div class="row no-gutters align-items-center">
                            <div class="col-auto">
                                <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@ViewBag.work</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Content Row -->
<div class="row">
    <!-- Content Column -->
    <div class="col-lg-6 mb-4">
        <!-- Team Card -->
        <div class="card shadow mb-4 .border-bottom-primary">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Team</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Job Title</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                            foreach (Team Member in ViewBag.TeamList)
                            {
                                <tr>
                                    <td>@(i++)</td>
                                    <td><img class="img-profile rounded-circle" src="~/imgs/teame/@Member.image" /></td>
                                    <td>@Member.name</td>
                                    <td>@Member.Job_title</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <!-- Categoreis Card -->
        <div class="card shadow mb-4 .border-bottom-primary">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Categoreis</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Category Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int x = 1;
                            foreach (Category cat in ViewBag.CategoriesList)
                            {
                                <tr>
                                    <td>@(x++)</td>
                                    <td>@cat.CategoryName</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Portofilo Card -->
        <div class="card shadow mb-4 .border-bottom-primary">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Portofilo</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Category</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int z = 1;
                            foreach (Work work in ViewBag.WorkList)
                            {
                                <tr>
                                    <td>@(z++)</td>
                                    <td><img class="img-profile rounded-circle" src="~/Uploads/@work.image" /></td>
                                    <td>@work.title</td>
                                    <td>@work.category.CategoryName</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>