@model Soft_Website.Models.Contact

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_IntroHeaderLayout_1.cshtml";
    ViewBag.Message = "We are happy to communicate with you";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="contact">
        <div class="container">
            <h3>Contact Us</h3>
            <div class="left_contact">
                <img src="imgs/contact1.png">
            </div>
            <div class="right_contact">
                <label>Name*</label><br>
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @type = "text" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                @*<input type="text">*@

                <label>Email*</label><br>
                @Html.EditorFor(model => model.E_mail, new { htmlAttributes = new { @type = "email" } })
                @Html.ValidationMessageFor(model => model.E_mail, "", new { @class = "text-danger" })
                @*<input type="email">*@

                <label>Phone Number*</label><br>
                @Html.EditorFor(model => model.phoneNum, new { htmlAttributes = new { @type = "text" } })
                @Html.ValidationMessageFor(model => model.phoneNum, "", new { @class = "text-danger" })

                <label>Message*</label><br>
                @Html.TextAreaFor(model => model.message, new { @class = "msg" })
                @Html.ValidationMessageFor(model => model.message, "", new { @class = "text-danger" })
                @*<textarea name="message" class="msg"></textarea>*@
                <br>

                <button type="submit">
                    Send
                    <i class="fa fa-paper-plane"></i>
                </button>

            </div>
        </div>
    </div>


}
